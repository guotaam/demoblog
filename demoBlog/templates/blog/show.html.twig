{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}

	<section class="row article">
		<article class="col-md-6 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
			<h2>{{ item.title }}</h2>
			<div class="metadata">Ecrit le
				{{ item.createdAt|date('d/m/Y à H:i:s') }}
				dans la catégorie Politique</div>
			<div class="content">
				<img src="{{ item.image }}" alt="">
				{{ item.content|raw }}
			</div>
		</article>
	</section>

{% endblock %}
